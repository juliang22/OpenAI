<appian-plugin name="OpenAI" key="com.appian.openai">
  <plugin-info>
    <description>OpenAI Connected System Plugin</description>
    <vendor name="Appian" url="https://appian.com/"/>
    <version>1.0.0.0</version>
    <application-version min="7.6.0.4"/>
  </plugin-info>
  <connected-system key="OpenAI">
    <version major-version="1">
      <connected-system-template key="OpenAICSP"
                                 name="OpenAI"
                                 class="com.appian.openai.templates.OpenAICSP"/>
      <integration-template key="ClaimsIntegrationTemplate"
                            name="Claims"
                            class="com.appian.openai.templates.apis.ClaimsIntegrationTemplate"
                            request-policy="write" />
      <integration-template key="PoliciesIntegrationTemplate"
                            name="Policies"
                            class="com.appian.openai.templates.apis.PoliciesIntegrationTemplate"
                            request-policy="write" />
      <integration-template key="JobsIntegrationTemplate"
                            name="Jobs"
                            class="com.appian.openai.templates.apis.JobsIntegrationTemplate"
                            request-policy="write" />
      <integration-template key="AccountsIntegrationTemplate"
                            name="Accounts"
                            class="com.appian.openai.templates.apis.AccountsIntegrationTemplate"
                            request-policy="write" />
      <integration-template key="OpenAIIntegrationTemplate"
                            name="Openai"
                            class="com.appian.openai.templates.apis.OpenAIIntegrationTemplate"
                            request-policy="write" />
    </version>
  </connected-system>
</appian-plugin>
